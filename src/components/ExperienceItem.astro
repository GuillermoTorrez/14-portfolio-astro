---
import LinkInline from "./LinkInline.astro";

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
  flag?: string;
}

const { title, company, description, link, date, flag } = Astro.props;
---

<div class="flex items-center">
  <div
    class="z-10 flex items-center justify-center size-10 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-900 sm:ring-8 dark:ring-gray-900 shrink-0"
  >
    <svg
      class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
      ></path>
    </svg>
  </div>
  <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
</div>
<div class="mt-3 mb-4 sm:pe-8 flex items-center">
  <img class="size-4 mr-2" src={flag} alt="Country Flag" /> 
  <h3 class="text-lg font-semibold text-white-900 dark:text-white">
    {company}
  </h3>
</div>
<h3 class="text-lg font-semibold text-white-900 dark:text-white">
  {title}
</h3>

<time
  class="block mb-2 text-sm font-normal leading-none text-white-500 dark:text-gray-500"
  >{date}</time
>
<p class="text-normal font-normal text-gray-500 dark:text-gray-400 mr-2 ml-0" >
  {description}
  {
    link && (
      <LinkInline href={link}>
        Learn more...{" "}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 icon icon-tabler icon-tabler-chevron-right"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <>
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M9 6l6 6l-6 6" />
          </>
        </svg>
      </LinkInline>
    )
  }
</p>
