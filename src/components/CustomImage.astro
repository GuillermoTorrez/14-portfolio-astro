---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
    imageUrl: string | ImageMetadata;
    alt: string;
    className?: string;
}

const { imageUrl, alt, className } = Astro.props;

const optimizedImage = await getImage({
    src: imageUrl,
    format: "webp",
    width: 200,
    height: 200,
});

---
<picture>
    <source src={optimizedImage.src} type="image/webp" />
    <img src={optimizedImage.src} alt={alt} class={className} />
</picture>