---
import { Image } from 'astro:assets';
const personalImageAlt = "Guillermo Torrez";
import Badge from "../components/Badge.astro";
import LinkeindIcon from "../components/icons/Linkeind.astro";
import SocialMedia from "../components/icons/SocialMedia.astro";
import GitHubIcon from "../components/icons/Github.astro";
import EmailIcon from "../components/icons/Email.astro";
import Picture from '../../public/Guillermo.webp';
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">

    <Image
      class="rounded-full shadow-lg size-20"
      src={Picture}
      alt={personalImageAlt}
      loading='eager'
    />
    <a
      href="https://linkedin.com/in/william-torres-822796307"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Available to work</Badge>
    </a>
  </div>

  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, I am Guillermo Cano
  </h1>

  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Seven years of experience <strong
      >as a Web Developer, specializing in developing JavaScript applications.</strong
    >
  </p>

  <nav class="flex gap-x-4 mt-4">
    <SocialMedia href="https://linkedin.com/in/william-torres-822796307">
      <LinkeindIcon class="size-6" />
      Linkeind
    </SocialMedia>
    <SocialMedia href="https://github.com/GuillermoTorrez">
      <GitHubIcon class="size-6" />
      GitHub
    </SocialMedia>
    <SocialMedia href="mailto:guillermo.torrez@gmail.com">
      <EmailIcon class="size-6" />
      guillermo.torrez@gmail.com
    </SocialMedia>
  </nav>
</div>
