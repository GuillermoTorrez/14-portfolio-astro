---
import { Image } from "astro:assets";
const personalImageAlt = "Guillermo Torrez";
import Badge from "../components/Badge.astro";
import LinkeindIcon from "../components/icons/Linkeind.astro";
import SocialMedia from "../components/icons/SocialMedia.astro";
import GitHubIcon from "../components/icons/Github.astro";
import EmailIcon from "../components/icons/Email.astro";
import Picture from "../../public/me.webp";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <Image
      class="object-cover rounded-full shadow-lg size-40"
      src={Picture}
      alt={personalImageAlt}
      loading="eager"
    />
    <a
      href="https://linkedin.com/in/william-torres-822796307"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Available to work remotely</Badge>
    </a>
  </div>

  <div class="anim absolute h-[500px]">
    <h1
    class="anim-type sm:text-6xl text-4xl mt-sm-0 mb-sm-0 mt-lg-2 mb-lg-2 font-bold tracking-tight text-gray-800  dark:text-white leading-tight"
      data-text='[ "Hey, I am Guillermo", "I Love Coding", "I am Creative", "Extra Mile Mentality", "Strong Problem Solving" ]'
    >
    </h1>
  </div>

  <div class="flex">
  <p
    class="mt-20 mb-2 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Seven years of experience <strong
      >as a Web Developer, specializing in developing JavaScript applications.</strong
    >
  </p>
  </div>

  <nav class="flex justify-left gap-3 flex-wrap mt-3">
    <SocialMedia href="https://linkedin.com/in/william-torres-822796307">
      <LinkeindIcon class="m-1 size-6 min-w-6 sm:min-w-5 md:min-w-4 lg:min-w-3" />
      Linkeind
    </SocialMedia>

    <SocialMedia href="https://github.com/GuillermoTorrez">
      <GitHubIcon class=" m-1 size-6 min-w-6 sm:min-w-5 md:min-w-4 lg:min-w-3" />
      GitHub
    </SocialMedia>

    <SocialMedia href="mailto:guillermo.torrez@gmail.com">
      <EmailIcon class="m-1 size-6 min-w-6 sm:min-w-5 md:min-w-4 lg:min-w-3" />
      guillermo.torrez@gmail.com
    </SocialMedia>
  </nav>
</div>

<script src="/src/layouts/Typewriter.js"></script>